--TestingDefaultEarth.asset
local sceneHelper = asset.require('util/scene_helper')

local TestKeybindings = {
    {
        Key = "F8",
        Name = "play test recording",
        Command = "openspace.sessionRecording.startPlayback('${BASE}/OpenSpaceVisualTesting/OpenSpaceVisualTesting/Default/RecordingDefaultSolarSystem.osrecording')",
        Documentation = " ",
        Local = true
    },
}

asset.onInitialize(function()
    Keys = sceneHelper.bindKeys(TestKeybindings)
	openspace.time.setTime("2019-01-01T00:00:00.00")
end)

asset.onDeinitialize(function ()
    sceneHelper.unbindKeys(TestKeybindings)
end)

asset.export("TestingKeybindings", TestKeybindings)
